<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="400" prefHeight="300" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projektjava.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="welcomeText" />
   <VBox prefHeight="200.0" prefWidth="100.0">
       <VBox alignment="CENTER" spacing="10">
           <Label style="-fx-font-size: 20px;" text="Zaloguj się" />

           <TextField fx:id="loginField" promptText="Email" />
           <PasswordField fx:id="passwordField" promptText="Hasło" />

           <Button onAction="#handleLogin" text="Zaloguj" />
           <Label fx:id="errorLabel" textFill="red"/>
       </VBox>
       <Button text="Rejestracja" onAction="#otworzOknoRejestracji" />
   </VBox>
</VBox>
